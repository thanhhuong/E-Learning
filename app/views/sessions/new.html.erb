<div class="row">
    <div class="form-box offset3 span6">
        <%= form_for :session, url: login_path do |f| %>
            <div class="form-body">
                <fieldset>
                <legend><%= t ".login" %></legend>
                <%= f.label :email, t(".email") %>
                <%= f.email_field :email, class: "input-block-level" %>
                <%= f.label :password, t(".password") %>
                <%= f.password_field :password, class: "input-block-level" %>
                <%= f.label :remember_me, class: "checkbox inline" do %>
                  <%= f.check_box :remember_me %>
                  <%= t ".remember_me" %>
                <% end %>
                <br/>
                <%= f.submit t(".btn_submit"), class: "btn-style" %>
                <%#= link_to t(".signup"), signup_path, class: "btn-style" %>
                </fieldset>
            </div>
        <% end %>
    </div>
</div>