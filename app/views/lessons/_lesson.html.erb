<tr>
  <td>
    <%= lesson.category.name %>
  </td>
  <td><%= lesson.results.answered.count %>
      <%= t ".question_done" %>
  </td>
  <td>
    <%= lesson.created_at.to_formatted_s :short %>
  </td>
  <td>
      <% unless lesson.finished? %>
        <div class="col-md-4">
          <%= button_to t(".take_lesson"), edit_lesson_path(lesson), method: :get, class: "btn btn-default" %>
        </div>
      <% else %>
        <div class="col-md-4">
          <%= link_to(lesson_path(lesson)) do %>
            <%= lesson.mark %>
            <%= t ".slash" %>
            <%= lesson.results.count %>
          <% end %>
          <%#= lesson.mark %>
          <%#= t ".slash" %>
          <%#= lesson.results.count %>
        </div>
    <% end %>
  </td>
</tr>
