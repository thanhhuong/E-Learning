<header>
  <div class="navigation-bar">
    <div class="container">
      <div class="logo">
        <%= link_to "#", id: "logo" do %>
          <%= image_tag "logo.png" %>
        <% end %>
      </div>
      <div class="language">
        <div class="dropdown">
          <a class="dropdown-toggle" id="dLabel1" role="button" data-toggle="dropdown" data-target="#" href="/page.html">
          Language
          <b class="caret"></b>
          </a>
          <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel1">
            <li><%= link_to "English", "/en/" %></li>
            <li><%= link_to "Japanese", "/ja/" %></li>
          </ul>
        </div>
      </div>
      <div class="cart">
        <ul>
          <li>
            <div class="search-bar"><i class="fa fa-search"></i></div>
            <div class="search-box">
              <input type="text" class="input-block-level">
            </div>
          </li>
        </ul>
      </div>
      <div class="navigation">
        <div class="navbar">
          <div class="navbar-inner">
            <div class="container">
              <button data-target=".nav-collapse" data-toggle="collapse" class="btn btn-navbar" type="button">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
              <div class="nav-collapse collapse">
                <ul>
                  <% if logged_in? %>
                    <% if current_user.admin? %>
                      <li><%= link_to t(".home"), root_path %></li>
                      <li><%= link_to t(".help"), help_path %></li>
                      <li><%= link_to t(".import/export_file_csv"), admin_words_path %></li>
                      <li><%= link_to t(".all_users"), admin_users_path %></li>
                    <% else %>
                      <li><%= link_to t(".home"), root_path %></li>
                      <li><%= link_to t(".help"), help_path %></li>
                      <li><%= link_to t(".all_users"), users_path %></li>
                    <% end %>
                    <li class="dropdown">
                      <ul class="dropdown-menu">
                        <li class="divider"></li>
                        <li>
                        </li>
                      </ul>
                    </li>
                  <% else %>
                    <li><%= link_to t(".help"), help_path %></li>
                  <% end %>
                </ul>
                <div class="account">
                  <ul>
                    <% if logged_in? %>
                    <li><%= link_to t(".log_out"), logout_path, method: "delete" %></li>
                    <li>
                      <div class="dropdown">
                        <%= link_to "#", class: "dropdown-toggle", id: "account", role: "button", "data-toggle" => "dropdown" do %>
                          <%= t ".account" %>
                          <b class="caret"></b>
                        <% end %>
                        <ul class="dropdown-menu" role="menu" aria-labelledby="account">
                          <li><%= link_to t(".profile"), current_user %></li>
                          <li><%= link_to t(".setting"), edit_user_path(current_user) %></li>
                        </ul>
                      </div>
                    </li>
                    <% else %>
                      <li><%= link_to t(".sign_up"), signup_path %></li>
                      <li><%= link_to t(".log_in"), login_path %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>
